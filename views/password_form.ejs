<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= action === "insert" ? "Insert Document" : "Edit Document" %></title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">    
    
</head>

<body class="bg-dark text-light">
    <div class="container py-4">
        <div class="form-container bg-secondary p-4 rounded shadow">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="text-light"><%= action === "insert" ? "Add New Password Entry" : "Edit Password Entry" %></h1>                
            </div>

            <form action="/password/<%= action %><%= action === 'edit' ? `/${data.WebsiteID}` : '' %>" method="POST">
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">

                        <!-- WebsiteID -->
                        <div class="mb-3">
                            <label for="WebsiteID" class="form-label">WebsiteID</label>
                            <input type="int" id="WebsiteID" name="WebsiteID" class="form-control bg-dark text-light" value="<%= data.WebsiteID || '' %>" required>
                        </div>

                        <!-- Website Name -->
                        <div class="mb-3">
                            <label for="WebsiteName" class="form-label">WebsiteName</label>
                            <input type="text" id="WebsiteName" name="WebsiteName" class="form-control bg-dark text-light" value="<%= data.WebsiteName || '' %>" required>
                        </div>

                        <!-- User Name -->
                        <div class="mb-3">
                            <label for="UserName" class="form-label">UserName</label>
                            <input type="text" id="UserName" name="UserName" class="form-control bg-dark text-light" value="<%= data.UserName || '' %>" required>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <input type="text" id="Password" name="Password" class="form-control bg-dark text-light" value="<%= data.Password || '' %>" required>
                        </div>

                                                                        
                        
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">                        
                        <!-- Linked Email -->
                        <div class="mb-3">
                            <label for="LinkedEmail" class="form-label">LinkedEmail</label>
                            <input type="text" id="LinkedEmail" name="LinkedEmail" class="form-control bg-dark text-light" value="<%= data.LinkedEmail || '' %>">
                        </div>                        

                        <!-- Linked Mobile -->
                        <div class="mb-3">
                            <label for="LinkedMobile" class="form-label">LinkedMobile</label>
                            <input type="text" id="LinkedMobile" name="LinkedMobile" class="form-control bg-dark text-light" value="<%= data.LinkedMobile || '' %>">
                        </div>

                        <!-- Note 1 -->
                        <div class="mb-3">
                            <label for="Note1" class="form-label">Note1</label>
                            <input type="text" id="Note1" name="Note1" class="form-control bg-dark text-light" value="<%= data.Note1 || '' %>">
                        </div>

                        <!-- Note 2 -->
                        <div class="mb-3">
                            <label for="Note2" class="form-label">Note2</label>
                            <input type="text" id="Note2" name="Note2" class="form-control bg-dark text-light" value="<%= data.Note2 || '' %>">
                        </div>
                    </div>
                </div>                

                <!-- Action Buttons -->
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary"><%= action === "insert" ? "Add Password" : "Save Changes" %></button>
                    <a href="/password" class="btn btn-primary">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <!-- JavaScript to Set Focus -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("WebsiteName").focus();
        });
    </script>

    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .form-container {
            max-width: 800px;
            margin: auto;
        }
        .form-label {
            font-weight: bold;
        }
        .btn {
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
        }
        .form-control {
            border: 1px solid #444;
        }
        .form-control:focus {
            border-color: #007bff;
            box-shadow: none;
        }
    </style>
</body>


</html>
