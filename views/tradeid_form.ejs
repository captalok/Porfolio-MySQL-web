<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= action === "insert" ? "Insert Document" : "Edit Document" %></title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/insertEditForm.css">
    
</head>

<body>
    <div class="container">
        <div class="form-container">
            <h1><%= action === "insert" ? "Add New Trade ID" : "Edit Trade ID" %></h1>
            <form action="/tradeid/<%= action %><%= action === 'edit' ? `/${data.TradeID}` : '' %>" method="POST">               
                

                <!-- Buy Date -->
                <div class="mb-3">
                    <label for="BuyDate" class="form-label">Buy Date</label>
                    <input type="date" id="BuyDate" name="BuyDate" class="form-control" value="<%= data.BuyDate || '' %>" required>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary"><%= action === "insert" ? "Add Trade" : "Save Changes" %></button>

                <!-- Cancel Button -->
                <a href="/tradeid" class="btn btn-secondary mt-3">Cancel</a>
            </form>
        </div>
    </div>
    <script>
        // Populate the ApptStart field with the current date
        document.addEventListener('DOMContentLoaded', () => {
            const buyDateField = document.getElementById('BuyDate');
            if (buyDateField && !buyDateField.value) {
                const today = new Date();
                const formattedDate = today.toISOString().split('T')[0]; // Format the date as yyyy-mm-dd
                buyDateField.value = formattedDate;
            }
        });
    </script>
</body>

</html>
