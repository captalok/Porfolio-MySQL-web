<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= action === "insert" ? "Insert Document" : "Edit Document" %></title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <style>
        body {
            background-color: #121212;
            color: #ffffff;
        }

        .form-container {
            max-width: 600px;
            margin: 50px auto;
            background: #1e1e1e;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.5);
        }

        .form-container h1 {
            font-size: 24px;
            text-align: center;
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            color: #ccc;
        }

        input, select, textarea {
            background-color: #222;
            color: #fff;
            border: 1px solid #444;
        }

        input:focus, select:focus, textarea:focus {
            outline: none;
            box-shadow: 0 0 5px #007bff;
            border-color: #007bff;
        }

        button {
            width: 100%;
            background-color: #007bff;
            border: none;
            padding: 10px;
            font-size: 16px;
            border-radius: 4px;
            color: white;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #0056b3;
        }

        .btn-secondary {
            background-color: #444;
        }

        .btn-secondary:hover {
            background-color: #333;
        }

        .form-footer {
            text-align: center;
            margin-top: 20px;
        }

        .form-footer a {
            color: #007bff;
            text-decoration: none;
        }

        .form-footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="form-container">
            <h1><%= action === "insert" ? "Add New Document" : "Edit Document" %></h1>
            <form action="/document/<%= action %><%= action === 'edit' ? `/${data.DocID}` : '' %>" method="POST">
                <!-- Document Name -->
                <div class="mb-3">
                    <label for="DocName" class="form-label">Document Name</label>
                    <input type="text" id="DocName" name="DocName" class="form-control" value="<%= data.DocName || '' %>" required>
                </div>

                <!-- Document Path -->
                <div class="mb-3">
                    <label for="DocPath" class="form-label">Document Path</label>
                    <input type="text" id="DocPath" name="DocPath" class="form-control" value="<%= data.DocPath || '' %>">
                </div>

                <!-- Document Text -->
                <div class="mb-3">
                    <label for="DocText" class="form-label">Document Text</label>
                    <input type="text" id="DocText" name="DocText" class="form-control" value="<%= data.DocText || '' %>">
                </div>

                <!-- Doc UserID Combo Box -->
                <div class="mb-3">
                    <label for="DocUserID" class="form-label">Document User</label>
                    <select id="DocUserID" name="DocUserID" class="form-control">
                        <% users.forEach(user => { %>
                            <option value="<%= user.DocUserID %>" <%= user.DocUserID === data.DocUserID ? 'selected' : '' %>><%= user.DocUserName %></option>
                        <% }); %>
                    </select>
                </div>


                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary"><%= action === "insert" ? "Add Document" : "Save Changes" %></button>

                <!-- Cancel Button -->
                <a href="/document" class="btn btn-secondary mt-3">Cancel</a>
            </form>
        </div>
    </div>
</body>

</html>
