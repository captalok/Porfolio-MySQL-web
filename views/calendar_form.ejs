<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= action === "insert" ? "Insert Appointment" : "Edit Appointment" %></title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/insertEditForm.css">
    
</head>

<body>
    <div class="container">
        <div class="form-container">
            <h1><%= action === "insert" ? "Add New Appointment" : "Edit Appointment" %></h1>
            <form action="/calendar/<%= action %><%= action === 'edit' ? `/${data.ApptID}` : '' %>" method="POST">
                <!-- Appointment Subject -->
                <div class="mb-3">
                    <label for="ApptSubject" class="form-label">Subject</label>
                    <input type="text" id="ApptSubject" name="ApptSubject" class="form-control" value="<%= data.ApptSubject || '' %>" required>
                </div>

                <!-- Appointment Location -->
                <div class="mb-3">
                    <label for="ApptLocation" class="form-label">Location</label>
                    <input type="text" id="ApptLocation" name="ApptLocation" class="form-control" value="<%= data.ApptLocation || '' %>">
                </div>

                <!-- Appointment Start -->
                <div class="mb-3">
                    <label for="ApptStart" class="form-label">Start Time</label>
                    <input type="date" id="ApptStart" name="ApptStart" class="form-control" value="<%= data.ApptStart || '' %>" required>
                </div>

                <!-- Appointment End -->
                <div class="mb-3">
                    <label for="ApptEnd" class="form-label">End Time</label>
                    <input type="date" id="ApptEnd" name="ApptEnd" class="form-control" value="<%= data.ApptEnd || '' %>" required>
                </div>

                <!-- Notes -->
                <div class="mb-3">
                    <label for="ApptNotes" class="form-label">Notes</label>
                    <textarea id="ApptNotes" name="ApptNotes" class="form-control" rows="4"><%= data.ApptNotes || '' %></textarea>
                </div>

                <!-- Priority -->
                <div class="mb-3">
                    <label for="Priority" class="form-label">Priority</label>
                    <input type="int" id="Priority" name="Priority" class="form-control" value="<%= data.Priority || '' %>">
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary"><%= action === "insert" ? "Add Appointment" : "Save Changes" %></button>

                <!-- Cancel Button -->
                <a href="/calendar" class="btn btn-secondary mt-3">Cancel</a>
            </form>
        </div>
    </div>
    <script>
        // Populate the ApptStart field with the current date
        document.addEventListener('DOMContentLoaded', () => {
            const apptStartField = document.getElementById('ApptStart');
            if (apptStartField && !apptStartField.value) {
                const today = new Date();
                const formattedDate = today.toISOString().split('T')[0]; // Format the date as yyyy-mm-dd
                apptStartField.value = formattedDate;
            }
        });
    </script>
    <script>
        // Populate the ApptEnd field with the current date
        document.addEventListener('DOMContentLoaded', () => {
            const apptEndField = document.getElementById('ApptEnd');
            if (apptEndField && !apptEndField.value) {
                const today = new Date();
                const formattedDate = today.toISOString().split('T')[0]; // Format the date as yyyy-mm-dd
                apptEndField.value = formattedDate;
            }
        });
    </script>
</body>

</html>
