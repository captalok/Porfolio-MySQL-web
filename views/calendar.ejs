<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendar Database</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <h1 class="text-center">Calendar Database</h1>

    <!-- Table with Bootstrap styling -->
    <div class="container">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Subject</th>
                    <th>Start</th>
                    <th>Location</th>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
                <!-- Iterate through the database array -->
                <% for (let data of database) { %>
                    <tr>
                        <td><%= data.ApptID %></td>
                        <td><%= data.ApptSubject %></td>
                        <td><%= data.ApptStart %></td>
                        <td><%= data.ApptLocation %></td>
                        <td><%= data.ApptNotes %></td>


                        <td>
                            <form method="get" action="/user/calendar/edit">
                                <button type="submit">Edit</button>
                            </form>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>
