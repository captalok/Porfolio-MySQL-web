<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= action === "insert" ? "Insert Document" : "Edit Document" %></title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/insertEditForm.css">
    
</head>

<body>
    <div class="container">
        <div class="form-container">
            <h1><%= action === "insert" ? "Add New Finance Entry" : "Edit Finance Entry" %></h1>
            <form action="/finance/<%= action %><%= action === 'edit' ? `/${data.VoucherLineID}` : '' %>" method="POST">
                
                <!-- VoucherID -->
                <div class="mb-3">
                    <label for="VoucherID" class="form-label">VoucherID</label>
                    <input type="int" id="VoucherID" name="VoucherID" class="form-control" value="<%= data.VoucherID || '' %>" required>
                </div>

                <!-- AccountDetailID Combo Box -->
                <div class="mb-3">
                    <label for="AccountDetailID" class="form-label">Account Detail</label>
                    <select id="AccountDetailID" name="AccountDetailID" class="form-control">
                        <% accountDetails.forEach(accountDetail => { %>
                            <option 
                                value="<%= accountDetail.AccountDetailID %>" 
                                <%= accountDetail.AccountDetailID === data.AccountDetailID ? 'selected' : '' %>>
                                <%= accountDetail.AccountName %>
                            </option>
                        <% }); %>
                    </select>
                </div>

                <!-- AccountTypeID Combo Box -->
                <div class="mb-3">
                    <label for="AccountTypeID" class="form-label">Account Type</label>
                    <select id="AccountTypeID" name="AccountTypeID" class="form-control">
                        <% accountTypes.forEach(accountType => { %>
                            <option 
                                value="<%= accountType.AccountTypeID %>" 
                                <%= accountType.AccountTypeID === data.AccountTypeID ? 'selected' : '' %>>
                                <%= accountType.AccountType %>
                            </option>
                        <% }); %>
                    </select>
                </div>                

                <!-- Debit Amount -->
                <div class="mb-3">
                    <label for="DebitAmount" class="form-label">Debit</label>
                    <input type="double" id="DebitAmount" name="DebitAmount" class="form-control" value="<%= data.DebitAmount !== undefined && data.DebitAmount !== null ? data.DebitAmount : '' %>" required>
                </div>

                <!-- Credit Amount -->
                <div class="mb-3">
                    <label for="CreditAmount" class="form-label">Credit</label>
                    <input type="double" id="CreditAmount" name="CreditAmount" class="form-control" value="<%= data.CreditAmount !== undefined && data.CreditAmount !== null ? data.CreditAmount : '' %>" required>
                </div>                        

                <!-- Narration -->
                <div class="mb-3">
                    <label for="Narration" class="form-label">Narration</label>
                    <input type="text" id="Narration" name="Narration" class="form-control" value="<%= data.Narration || '' %>" required>
                </div>

                <!-- Notes -->
                <div class="mb-3">
                    <label for="Notes" class="form-label">Notes</label>
                    <input type="text" id="Notes" name="Notes" class="form-control" value="<%= data.Notes || '' %>" required>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary"><%= action === "insert" ? "Add Finance Entry" : "Save Changes" %></button>

                <!-- Cancel Button -->
                <a href="/finance" class="btn btn-secondary mt-3">Cancel</a>
            </form>
        </div>
    </div>
</body>

</html>
