<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/searchContainer.css">    
    
</head>

<body>

    <!-- Header and Search Container -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-center">Document Edit</h1>
        <a href="/" class="btnEdit btn-primary">Home</a>
        <a href="/dashboard" class="btnEdit btn-info">Dashboard</a>
        <input type="text" id="searchBox" class="form-control w-25" placeholder="Search...">        
    </div>   

    <div class="table-container">
        <!-- Insert Button -->
        <a href="/document/insert" class="btn btn-success mb-3">Add New Document</a>
    
        <!-- Table -->
        <table id="dataTable" class="table table-bordered table-striped table-dark">
            <thead>
                <tr>
                    <% if (database.length > 0) { %>
                        <% Object.keys(database[0]).forEach(key => { %>
                            <th><%= key %></th>
                        <% }); %>
                        <th>Actions</th> <!-- Actions Column -->
                    <% } else { %>
                        <th colspan="100%">No Records Found</th>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <% database.forEach(row => { %>
                    <tr>
                        <% Object.entries(row).forEach(([key, value]) => { %>
                            <td 
                                <% if (key === 'DocPath') { %>
                                    style="color: #26A69A; font-weight: bold;" 
                                <% } else if (key === 'DocName') { %>
                                    style="color: #FFD54F; font-weight: bold;" 
                                <% } else if (key === 'DocUserName' && value === 'Alok') { %>
                                    style="color: #64B5F6; font-weight: bold;" 
                                <% } else if (key === 'DocUserName' && value === 'PaySlip') { %>
                                    style="color: #EF5350; font-weight: bold;" 
                                <% } else if (key === 'DocUserName' && value === 'Akash') { %>
                                    style="color: #81C784; font-weight: bold;" 
                                <% } else if (key === 'DocUserName' && value === 'Aryan') { %>
                                    style="color: #9575CD; font-weight: bold;" 
                                <% } else { %>
                                    style="color: #CFD8DC;" 
                                <% } %>
                            ><%= value %></td>
                        <% }); %>
                        <td class="action-buttons">
                            <!-- Open Button -->
                            <a href="/document/open/<%= row.DocID %>" class="btn btn-primary btn-sm">Open</a>
                        
                            <!-- Edit Button -->
                            <a href="/document/edit/<%= row.DocID %>" class="btn btn-warning btn-sm">Edit</a>
                        </td>                      
                    </tr>
                <% }); %>
            </tbody>
        </table>
        
    </div>
    

    <!-- JavaScript for Filtering Table Data -->
    <script>
        document.getElementById("searchBox").addEventListener("keyup", function () {
            const searchValue = this.value.toLowerCase(); // Convert input to lowercase
            const rows = document.querySelectorAll("#dataTable tbody tr");

            rows.forEach(row => {
                let rowText = ""; // Initialize text for the row

                // Combine all column text for the row into a single string
                row.querySelectorAll("td").forEach(cell => {
                rowText += cell.textContent.toLowerCase() + " ";
                });

                // Show or hide rows based on search query
                if (rowText.includes(searchValue)) {
                row.style.display = "";
                } else {
                row.style.display = "none";
                }
            });
        });
    </script>
</body>

</html>
